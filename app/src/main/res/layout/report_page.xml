<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sales_detail_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_green"
    tools:context=".Activity.HomeActivity">

    <!-- App Header -->

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_content_card"
        android:layout_width="383dp"
        android:layout_height="700dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="85dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Sales Report Header -->
            <LinearLayout
                android:id="@+id/sales_report_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/sales_report_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sales Report"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/export_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/main_green"
                    android:text="Export"
                    android:textAllCaps="false"
                    android:textColor="@color/light_cream" />
            </LinearLayout>

            <!-- Date Range Selection -->
            <LinearLayout
                android:id="@+id/date_range_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/sales_report_header">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:text="from" />

                <!--                <Button-->
                <!--                    android:id="@+id/date_from_button"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="40dp"-->
                <!--                    android:backgroundTint="#E6EEF8"-->
                <!--                    android:text="17/02/2025"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:drawableEnd="@drawable/ic_dropdown"-->
                <!--                    android:paddingStart="12dp"-->
                <!--                    android:paddingEnd="12dp"-->
                <!--                    android:layout_marginEnd="8dp" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:text="to" />

                <!--                <Button-->
                <!--                    android:id="@+id/date_to_button"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="40dp"-->
                <!--                    android:backgroundTint="#E6EEF8"-->
                <!--                    android:text="17/02/2025"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:drawableEnd="@drawable/ic_dropdown"-->
                <!--                    android:paddingStart="12dp"-->
                <!--                    android:paddingEnd="12dp" />-->
            </LinearLayout>

            <!-- Statistics Chart Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/statistics_chart_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/date_range_layout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Tab/Statistics Button -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout"
                        android:layout_width="84dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="3.5dp"
                        android:background="@drawable/statistics_tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tabIndicatorHeight="0dp"
                        app:tabTextColor="@android:color/white">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Statistics" />
                    </com.google.android.material.tabs.TabLayout>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/chartImage"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/chartImage" />

                    <ImageView
                        android:id="@+id/chartImage"
                        android:layout_width="342dp"
                        android:layout_height="205dp"

                        android:layout_marginTop="24dp"
                        android:background="@drawable/image_frame"
                        android:contentDescription="Sales Chart"
                        android:padding="2dp"
                        android:src="@drawable/chart_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Metrics Row -->
            <LinearLayout
                android:id="@+id/metrics_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/statistics_chart_card">

                <!-- Items Sold Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/items_sold_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/main_green"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Items sold"
                            android:textColor="@color/light_cream"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/items_sold_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textColor="@color/light_cream"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Revenue Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/revenue_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:cardBackgroundColor="@color/main_green"
                    app:cardCornerRadius="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Revenue"
                            android:textColor="@color/light_cream"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/revenue_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 1.500.000,00"
                            android:textColor="@color/light_cream"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Top 5 Best-Selling Menu Section -->
            <TextView
                android:id="@+id/top_selling_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Top 5 Best-Selling Menu"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/metrics_row" />

            <!-- Best-Selling Items List -->
            <LinearLayout
                android:id="@+id/best_selling_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/top_selling_title">

                <!-- Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/main_green"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/circle_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Banana Berries"
                        android:textColor="@color/light_cream"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/main_green"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/circle_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Banana Berries"
                        android:textColor="@color/light_cream"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Add placeholders for items 3-5 -->
                <!-- Item 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/main_green"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/circle_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Avocado Toast"
                        android:textColor="@color/light_cream"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Item 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/main_green"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/circle_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mango Smoothie"
                        android:textColor="@color/light_cream"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Item 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_green"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/circle_background" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green Tea Latte"
                        android:textColor="@color/light_cream"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->

</androidx.constraintlayout.widget.ConstraintLayout>